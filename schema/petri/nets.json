{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "POST /v1/nets",
    "description": "Create a new net.",
    "definitions": {
        "subnet": {
            "type": "object",
            "description": "TODO may type or notif_url be empty?",
            "properties": {
                "type": { "type": "string" },
                "notification_url": { "type": "string", "format": "uri" }
            },
            "required": ["type", "notification_url"],
            "additionalProperties": false
        },
        "transition": {
            "type": "object",
            "description": "TODO which properties should be required?",
            "properties": {
                "inputs": { "$ref": "#/definitions/places" },
                "outputs": { "$ref": "#/definitions/places" },
                "actions": { "$ref": "#/definitions/action" }
            },
            "additionalProperties": false
        },
        "places": {
            "type": "array",
            "description": "TODO should a places list have at least one place? is unique appropriate?",
            "uniqueItems": true,
            "items": { "$ref": "#/definitions/place" }
        },
        "place": {
            "type": "string",
            "description": "TODO is empty place name okay?",
            "minLength": 1
        }
        "action" {
            "type": "object",
            "description": "TODO may type or url be empty strings?",
            "properties": {
                "type": { "type": "string" },
                "url": { "type": "string", "format": "uri" }
            },
            "required": ["type", "url"],
            "additionalProperties": false
        }
    },
    "type": "object",
    "properties": {
        "subnets": {
            "type": "object",
            "description": "TODO disallow 0 subnets?",
            "additionalProperties": { "$ref": "#/definitions/subnet" }
        },
        "transitions": {
            "type": "array",
            "description": "TODO disallow 0 transitions?",
            "items": { "$ref": "#/definitions/transition" }
        }
    },
    "required": ["subnets", "transitions"],
    "additionalProperties": false
}
